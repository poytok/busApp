<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/bus_img" />

        <TextView
            android:id="@+id/ROUTENOtv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="518"
            android:textColor="#000000"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="    |    "
            android:textColor="#000000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/ORIGIN_BSTOPNMtv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="종점(병무청)"
            android:textColor="#000000"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" ↔ "
            android:textColor="#000000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/DEST_BSTOPNMtv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주안역"
            android:textColor="#000000"
            android:textSize="15dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right">

            <ImageView
                android:id="@+id/bookmark"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/gray_star" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="30dp">

        <TextView
            android:id="@+id/FBUS_DEPHMStv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textSize="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  ~  "
            android:textSize="12dp" />

        <TextView
            android:id="@+id/LBUS_DEPHMStv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textSize="12dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:text="최소 : "
            android:textSize="12dp" />

        <TextView
            android:id="@+id/MIN_ALLOCGAPtv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textSize="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="최대 : "
            android:textSize="12dp" />

        <TextView
            android:id="@+id/MAX_ALLOCGAPtv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textSize="12dp" />
    </LinearLayout>

</LinearLayout>