<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item2_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/routeImage"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:src="@drawable/origin" />

    <ImageView
        android:id="@+id/routeBus"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@id/routeImage"
        android:layout_marginLeft="43dp"
        android:layout_marginBottom="-5dp"
        android:src="@drawable/img2" />

    <LinearLayout
        android:id="@+id/layout123"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_toRightOf="@+id/routeImage"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/routeNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="종합터미널역(종점)" />


        <TextView
            android:id="@+id/ARRIVALESTIMATETIME"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffff0000"
            android:textSize="9dp"/>
    </LinearLayout>
</RelativeLayout>